@page
@model MascotaFeliz.App.Frontend.Pages.AsignarMascotaModel
@{
}
<main class="contenedor sombra">
    <div class="titulo">
        <img class="titulo__imagen" src="@Url.Content("~/img/huella.svg")" alt="Huella">
        <h2>Asignaciones Mascota</h2>
        <img class="titulo__imagen" src="@Url.Content("~/img/huella.svg")" alt="Huella">
    </div>
    <div class="contenido">
        <form action="" class="formulario" method="post">
            <div class="campos">
                <input type="hidden" asp-for="mascota.Id">
                <div class="campo">
                    <label asp-for="mascota.Nombre" class="campo__labelNombre">@Model.mascota.Nombre</label>

                </div>

                <div class="campo">
                    <label for="veterinario" class="campo__label">Veterinario:</label>
                    <select asp-for="mascota.Veterinario.Id" class="campo__texto" name="vet" id="veterinario">
                        <option value="0">--Selecione una opcion--</option>
                        @foreach (var v in Model.veterinarios)
                        {
                            <option value="@v.Id">@v.Nombres @v.Apellidos</option>
                        }
                    </select>
                   
                </div>
                <div class="campo">
                    <label for="dueno" class="campo__label">Dueño:</label>
                    <select asp-for="mascota.Dueno.Id" class="campo__texto" name="d" id="dueno">
                        <option value="0">--Selecione una opcion--</option>
                        @foreach (var v in Model.duenos)
                        {
                            <option value="@v.Id">@v.Nombres @v.Apellidos</option>
                        }
                    </select>
                </div>

            </div>
            <div class="contenedor">
                <input class="boton" type="submit" value="Guardar">

            </div>
        </form>
        <div class="imagenMascota"></div>
    </div>

</main>