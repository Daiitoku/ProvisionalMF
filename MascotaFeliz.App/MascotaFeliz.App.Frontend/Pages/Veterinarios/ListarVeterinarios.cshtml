@page
@model MascotaFeliz.App.Frontend.Pages.ListarVeterinariosModel
@{
}
<main class="contenedor sombra">
    <div class="titulo">
        <img class="titulo__imagen" src="@Url.Content("~/img/huella.svg")" alt="Huella">
        <h2>Listado de Veterinarios</h2>
        <img class="titulo__imagen" src="@Url.Content("~/img/huella.svg")" alt="Huella">
    </div>
    <table class="table">
        <thead>
            <tr>
                <th>Nombres</th>
                <th>Apellidos</th>
                <th>Direccion</th>
                <th>Telefono</th>
                <th>Tarjeta Profesional</th>
            </tr>
        </thead>

        @foreach (var veterinario in Model.listaVeterinarios)
        {
            <tr>
                <td data-table="Nombres: ">@veterinario.Nombres</td>
                <td data-table="Apellidos: ">@veterinario.Apellidos</td>
                <td data-table="Dirección: ">@veterinario.Direccion</td>
                <td data-table="Teléfono: ">@veterinario.Telefono</td>
                <td data-table="Tarjeta Profesional: ">@veterinario.TarjetaProfesional</td>

                <td class="td-button">
                    <div>
                        <a class="table__boton table__boton-detalle" title="Detalles" asp-page="./DetallesVeterinario" asp-route-veterinarioId= "@veterinario.Id"></a>
                        
                    </div>
                </td>
                <td class="td-button">
                    <div>
                        <a class="table__boton table__boton-update" title="Editar" asp-page="./AgregarVeterinario" asp-route-veterinarioId= "@veterinario.Id"></a>
                    </div>

                </td>
               <td class="td-button">
                 <div>
                    <a class="table__boton table__boton-borrar" title="Borrar" asp-page="./EliminarVeterinario" asp-route-veterinarioId= "@veterinario.Id"></a>
                 </div>
               </td>
                <br>
            </tr>
        }
    </table>
</main>